{
  "name": "template-node",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Tyler Stewart <git@tylerstewart.ca>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon",
    "prebuild": "rimraf dist",
    "build": "swc ./src -d dist --ignore **/*.test.js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:prod": "run-p build build:types",
    "start": "node dist/index.js",
    "lint": "xo src/**/*.ts --fix",
    "lint:check": "xo src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.2.168",
    "@swc/jest": "^0.2.15",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.8",
    "nodemon": "^2.0.15",
    "npm-run-all": "4.1.5",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "xo": "0.48.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": "@swc/jest"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node"
  },
  "xo": {
    "prettier": true,
    "env": "node"
  },
  "lint-staged": {
    "*": "xo --fix"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "**/*.test.ts"
    ],
    "exec": "yarn ts-node ./src/index.ts"
  },
  "volta": {
    "node": "16.14.2",
    "yarn": "1.22.18"
  }
}
