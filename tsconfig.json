{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "outDir": "./dist",
    "module": "ES6",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
