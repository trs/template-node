{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "swc": true,
    "esm": true
  }
}
